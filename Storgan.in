#!/bin/sh
#
# ``%%% MY_PYTHON_PKG %%%`` wrapper script
#
#    (c) 2021 Yoichi Tanibayashi
#
MYNAME=`basename $0`
MYDIR=`dirname $0`
BINDIR="$HOME/bin"

MY_PYTHON_PKG="%%% MY_PYTHON_PKG %%%"

MY_GITDIR="%%% MY_GITDIR %%%"
CONF_FILE="%%% CONF_FILE %%%"
VENVDIR="%%% VENVDIR %%%"
WORKDIR="%%% WORKDIR %%%"
WEBROOT="%%% WEBROOT %%%"

CONF_PATH="$MYDIR/$CONF_FILE"

export PYGAME_HIDE_SUPPORT_PROMPT=hide

### main

if [ x$VIRTUAL_ENV != x$VENVDIR ]; then
   if [ -f $VENVDIR/bin/activate ]; then
       . $VENVDIR/bin/activate
       echo "(VIRTUAL_ENV=$VIRTUAL_ENV)"
   else
       echo
       echo "ERROR(venv): can not activate python3 Virtualenv"
       echo
    exit 1
   fi
fi

if [ "$1" = "webapp" ]; then
    shift
    exec python -m $MY_PYTHON_PKG webapp -w $WORKDIR -r $WORKDIR/$WEBROOT $*
else
    exec python -m $MY_PYTHON_PKG $*
fi

